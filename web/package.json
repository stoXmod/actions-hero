{
  "name": "actions-hero",
  "version": "1.0.0",
  "description": "Official repo for train about CI/CD",
  "main": "./dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "npm-run-all --parallel watch-ts watch-server",
    "watch-server": "nodemon dist/server.js",
    "kill-ports": "npx kill-port 3001",
    "watch-ts": "tsc --watch",
    "lint": "npx standard --fix",
    "test": "jest --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoXmod/actions-hero.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stoXmod/actions-hero/issues"
  },
  "homepage": "https://github.com/stoXmod/actions-hero#readme",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@types/supertest": "^2.0.15",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "standard": "^16.0.3",
    "supertest": "^6.1.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "standard": {
    "env": [
      "commonjs",
      "node",
      "jest"
    ]
